    <Compile Remove="RazorPages\SxcRazorPage_CreateInstance.cs" />
    <Compile Remove="RazorPages\SxcRazorPage_IDynamicCode.cs" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Scripts\ToSic.Sxc.0.0.57.sql" />

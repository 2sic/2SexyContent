ALTER TABLE [dbo].[ToSIC_SexyContent_ContentGroupItems] DROP CONSTRAINT [FK_ToSIC_SexyContent_ContentGroupItems_ToSIC_SexyContent_Templates]


-- Commit the transaction
COMMIT TRANSACTION SexyContentUpdate;
